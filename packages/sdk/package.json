{
  "name": "@glueco/sdk",
  "version": "0.1.0",
  "description": "Personal Resource Gateway - Client SDK for target apps",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@glueco/shared": "^0.1.0",
    "@noble/ed25519": "^2.1.0",
    "@noble/hashes": "^1.3.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "gateway",
    "proxy",
    "pop",
    "ed25519",
    "authentication"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glueco/gateway.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/glueco/gateway/issues"
  },
  "homepage": "https://github.com/glueco/gateway#readme",
  "license": "MIT"
}
