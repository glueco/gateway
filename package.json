{
  "name": "personal-resource-gateway",
  "version": "1.0.0",
  "description": "Self-hostable Personal Resource Gateway with PoP identity and compatibility-first SDKs",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:proxy\" \"npm run dev:demo\"",
    "prebuild": "node scripts/generate-enabled-plugins.mjs",
    "build": "npm run prebuild && npm run build --workspaces",
    "build:plugins": "npm run build --workspace=packages/plugin-llm-groq --workspace=packages/plugin-llm-gemini --workspace=packages/plugin-llm-openai --workspace=packages/plugin-mail-resend",
    "lint": "npm run lint --workspaces --if-present",
    "dev:proxy": "npm run dev --workspace=apps/proxy",
    "dev:demo": "npm run dev --workspace=examples/demo-target-app",
    "build:proxy": "npm run build --workspace=@glueco/shared && npm run build:plugins && node scripts/generate-enabled-plugins.mjs && npm run build --workspace=@glueco/proxy",
    "build:sdk": "npm run build --workspace=packages/sdk",
    "build:shared": "npm run build --workspace=packages/shared",
    "db:generate": "npm run db:generate --workspace=apps/proxy",
    "db:push": "npm run db:push --workspace=apps/proxy",
    "db:migrate": "npm run db:migrate --workspace=apps/proxy",
    "db:studio": "npm run db:studio --workspace=apps/proxy",
    "generate:plugins": "node scripts/generate-enabled-plugins.mjs",
    "smoke": "node scripts/smoke.mjs",
    "smoke:local": "GATEWAY_URL=http://localhost:3000 node scripts/smoke.mjs",
    "smoke:verbose": "VERBOSE=true node scripts/smoke.mjs",
    "test:expiry": "GATEWAY_URL=http://localhost:3000 node scripts/test-expiry.mjs",
    "test": "npm run test --workspaces --if-present",
    "verify:npm-consumer": "node scripts/verify-npm-consumer.mjs",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "concurrently": "^9.2.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
